<Window x:Class="Zoo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zoo"
        mc:Ignorable="d"
        Title="Zoo Manager" Height="800" Width="1100" MinHeight="650" MinWidth="900"
        FontFamily="Segoe UI">
    <Window.Resources>
        <!--ez a szegmens adja a háttérdesign-t. Tudja tököm hogy működik de legalább jól néz ki. (Elnézést tanár úr)-->
        <DrawingBrush x:Key="CamoBackground" TileMode="Tile" Viewport="0,0,200,200" ViewportUnits="Absolute">
            <DrawingBrush.Drawing>
                <DrawingGroup>
                    <!-- alap réteg, mert kell valami amiből elindulunk -->
                    <GeometryDrawing Brush="#5C6B3C">
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0,200,200"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    
                    <!-- nagy foltok, mert a camo az ilyen -->
                    <GeometryDrawing Brush="#4A5A2F">
                        <GeometryDrawing.Geometry>
                            <PathGeometry>
                                <PathFigure StartPoint="30,40">
                                    <BezierSegment Point1="50,25" Point2="75,30" Point3="85,50"/>
                                    <BezierSegment Point1="90,70" Point2="80,85" Point3="60,90"/>
                                    <BezierSegment Point1="40,92" Point2="20,75" Point3="25,55"/>
                                    <BezierSegment Point1="22,45" Point2="25,40" Point3="30,40"/>
                                </PathFigure>
                            </PathGeometry>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    
                    <GeometryDrawing Brush="#3D4A28">
                        <GeometryDrawing.Geometry>
                            <PathGeometry>
                                <PathFigure StartPoint="120,20">
                                    <BezierSegment Point1="145,18" Point2="165,30" Point3="170,50"/>
                                    <BezierSegment Point1="168,70" Point2="155,80" Point3="135,82"/>
                                    <BezierSegment Point1="115,78" Point2="105,60" Point3="110,40"/>
                                    <BezierSegment Point1="112,25" Point2="115,20" Point3="120,20"/>
                                </PathFigure>
                            </PathGeometry>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    
                    <GeometryDrawing Brush="#6B7C4A">
                        <GeometryDrawing.Geometry>
                            <PathGeometry>
                                <PathFigure StartPoint="70,110">
                                    <BezierSegment Point1="90,105" Point2="110,115" Point3="115,135"/>
                                    <BezierSegment Point1="112,155" Point2="95,165" Point3="75,162"/>
                                    <BezierSegment Point1="55,158" Point2="45,140" Point3="52,125"/>
                                    <BezierSegment Point1="58,112" Point2="65,110" Point3="70,110"/>
                                </PathFigure>
                            </PathGeometry>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    
                    <!-- kisebb foltok a részletekért -->
                    <GeometryDrawing Brush="#394426">
                        <GeometryDrawing.Geometry>
                            <PathGeometry>
                                <PathFigure StartPoint="150,120">
                                    <BezierSegment Point1="165,118" Point2="175,128" Point3="172,145"/>
                                    <BezierSegment Point1="168,158" Point2="155,162" Point3="145,158"/>
                                    <BezierSegment Point1="135,152" Point2="132,138" Point3="140,128"/>
                                    <BezierSegment Point1="145,120" Point2="148,120" Point3="150,120"/>
                                </PathFigure>
                            </PathGeometry>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    
                    <GeometryDrawing Brush="#4F5E3A">
                        <GeometryDrawing.Geometry>
                            <PathGeometry>
                                <PathFigure StartPoint="15,140">
                                    <BezierSegment Point1="28,135" Point2="40,143" Point3="42,158"/>
                                    <BezierSegment Point1="38,172" Point2="25,178" Point3="15,172"/>
                                    <BezierSegment Point1="5,165" Point2="3,152" Point3="10,145"/>
                                    <BezierSegment Point1="13,140" Point2="14,140" Point3="15,140"/>
                                </PathFigure>
                            </PathGeometry>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    
                    <GeometryDrawing Brush="#7A8B5A">
                        <GeometryDrawing.Geometry>
                            <PathGeometry>
                                <PathFigure StartPoint="160,75">
                                    <BezierSegment Point1="172,72" Point2="185,80" Point3="185,92"/>
                                    <BezierSegment Point1="183,105" Point2="172,110" Point3="160,107"/>
                                    <BezierSegment Point1="148,103" Point2="145,90" Point3="152,82"/>
                                    <BezierSegment Point1="156,76" Point2="158,75" Point3="160,75"/>
                                </PathFigure>
                            </PathGeometry>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    
                    <!-- sötét pöttyök mert miért ne -->
                    <GeometryDrawing Brush="#2E3A1F">
                        <GeometryDrawing.Geometry>
                            <EllipseGeometry Center="45,65" RadiusX="12" RadiusY="10"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    
                    <GeometryDrawing Brush="#2E3A1F">
                        <GeometryDrawing.Geometry>
                            <EllipseGeometry Center="135,145" RadiusX="15" RadiusY="12"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>
        
        <!--  listában az állatok -->
        <DataTemplate x:Key="AnimalListTemplate">
            <Border BorderBrush="#8B9B6B" BorderThickness="2" Padding="14" Margin="4" 
                    Background="#FAFDF5" CornerRadius="10"
                    HorizontalAlignment="Stretch">
                <Border.Effect>
                    <DropShadowEffect Color="#2E3D1A" Opacity="0.25" BlurRadius="10" ShadowDepth="3"/>
                </Border.Effect>
                <StackPanel HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ID: " FontWeight="Bold" Foreground="#2E5016"/>
                        <TextBlock Text="{Binding id}" Margin="0,0,16,0" FontWeight="SemiBold" Foreground="#4A6B2F"/>
                        <TextBlock Text="Species: " FontWeight="Bold" Foreground="#2E5016"/>
                        <TextBlock Text="{Binding species}" Margin="0,0,16,0" FontWeight="SemiBold" Foreground="#4A6B2F"/>
                        <TextBlock Text="Habitat: " FontWeight="Bold" Foreground="#2E5016"/>
                        <TextBlock Text="{Binding habitat}" Margin="0,0,16,0" Foreground="#4A6B2F"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Text="Arrival: " FontWeight="Bold" Foreground="#2E5016"/>
                        <TextBlock Text="{Binding arrival_date}" Margin="0,0,16,0" Foreground="#4A6B2F"/>
                        <TextBlock Text="Health: " FontWeight="Bold" Foreground="#2E5016"/>
                        <TextBlock Text="{Binding health_status}" Margin="0,0,16,0" Foreground="#4A6B2F"/>
                        <TextBlock Text="Fed: " FontWeight="Bold" Foreground="#2E5016"/>
                        <TextBlock Text="{Binding is_fed}" Foreground="#4A6B2F"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>
        
        <!-- modern gombok stílus, mert az alap csúnya  -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10" Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.3" BlurRadius="8" ShadowDepth="3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2E3D1A"/>
        </Style>
        
        <!-- stílus a dobozokhoz, gradienssel  -->
        <Style x:Key="ContentBorder" TargetType="Border">
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FAFDF7" Offset="0"/>
                        <GradientStop Color="#F4F8EF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="BorderBrush" Value="#8B9B6B"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Margin" Value="0,12,0,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#2E3D1A" Opacity="0.2" BlurRadius="12" ShadowDepth="4"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="#2E5016"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
        
        <!-- ErrorBorder  -->
        <Style x:Key="ErrorBorder" TargetType="Border">
            <Setter Property="BorderBrush" Value="#D32F2F"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#D32F2F" Opacity="0.3" BlurRadius="4"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ErrorTextBox" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="BorderBrush" Value="#D32F2F"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        
        <Style x:Key="ErrorComboBox" TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
            <Setter Property="BorderBrush" Value="#D32F2F"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        
        <Style x:Key="ErrorDatePicker" TargetType="DatePicker" BasedOn="{StaticResource {x:Type DatePicker}}">
            <Setter Property="BorderBrush" Value="#D32F2F"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        
        <DataTemplate x:Key="ExpanderHeader">
            <TextBlock Text="{Binding}" Foreground="#2E5016" FontSize="17" FontWeight="Bold"/>
        </DataTemplate>
        
        <!-- globális stílusok mindenféle kontrollhoz, hogy ne kelljen mindenhol külön beállítani -->
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderBrush" Value="#8B9B6B"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="#8B9B6B"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        
        <Style TargetType="DatePicker">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="BorderBrush" Value="#8B9B6B"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <Style TargetType="CheckBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#2E3D1A"/>
        </Style>
        
        <Style TargetType="RadioButton">
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#2E3D1A"/>
        </Style>
        
        <Style TargetType="Expander">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="#F4F8EF" Opacity="0.7"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <!-- camo háttér beállítása -->
        <Grid.Background>
            <StaticResource ResourceKey="CamoBackground"/>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- fejléc a logóval, címmel és órával -->
        <Grid Height="75">
            <Grid.Background>
                <SolidColorBrush Color="#3E5A24"/>
            </Grid.Background>
            <Grid.Effect>
                <DropShadowEffect Color="#1A2610" Opacity="0.4" BlurRadius="12" ShadowDepth="5"/>
            </Grid.Effect>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Rectangle Fill="#2E4A18" Opacity="0.3" Grid.ColumnSpan="3"/>

            <!-- zsiráf :333 -->
            <TextBlock Text="🦒" FontSize="48" VerticalAlignment="Center" Margin="30,0,0,0"/>
            
            <!-- cím és készítők -->
            <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Zoo Manager" FontSize="34" FontWeight="Bold" 
                           Foreground="White" HorizontalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.5" BlurRadius="3" ShadowDepth="2"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock Text="Created by: Farok &amp; Zsomby" FontSize="11" FontStyle="Italic"
                           Foreground="#C5D9B5" HorizontalAlignment="Center" Margin="0,3,0,0"/>
            </StackPanel>
            
            <!-- óra mert fancy -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,30,0">
                <TextBlock Text="🕐" FontSize="22" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock x:Name="ClockTextBlock" FontSize="20" FontWeight="Bold" 
                           Foreground="White" VerticalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#000000" Opacity="0.4" BlurRadius="2" ShadowDepth="1"/>
                    </TextBlock.Effect>
                </TextBlock>
            </StackPanel>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="30,20">
            <StackPanel Margin="0,10,0,20">
                
                <!-- új állat hozzáadása szekció -->
                <Expander Header="Add New Animal" FontSize="17" FontWeight="Bold" Margin="0,0,0,24"
                          HeaderTemplate="{StaticResource ExpanderHeader}" IsExpanded="False">
                    <Border Style="{StaticResource ContentBorder}">
                        <StackPanel>
                            <!-- űrlap mezők 3 oszlopban mert így menő -->
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" MinWidth="180"/>
                                    <ColumnDefinition Width="*" MinWidth="180"/>
                                    <ColumnDefinition Width="*" MinWidth="180"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- ID mező -->
                                <StackPanel Margin="0,0,12,16">
                                    <TextBlock Text="ID" Style="{StaticResource LabelText}"/>
                                    <TextBox x:Name="IdTextBox"/>
                                    <TextBlock x:Name="IdErrorTextBlock" Foreground="#C62828" FontSize="10" 
                                               Margin="0,2,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                                </StackPanel>

                                <!-- név/fajta -->
                                <StackPanel Grid.Column="1" Margin="6,0,6,16">
                                    <TextBlock Text="Name (Species)" Style="{StaticResource LabelText}"/>
                                    <TextBox x:Name="NameTextBox"/>
                                    <TextBlock x:Name="NameErrorTextBlock" Foreground="#C62828" FontSize="10" 
                                               Margin="0,2,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                                </StackPanel>

                                <!-- élőhely választó -->
                                <StackPanel Grid.Column="2" Margin="12,0,0,16">
                                    <TextBlock Text="Habitat" Style="{StaticResource LabelText}"/>
                                    <ComboBox x:Name="HabitatComboBox">
                                        <ComboBoxItem Content="Savannah"/>
                                        <ComboBoxItem Content="Rainforest"/>
                                        <ComboBoxItem Content="Desert"/>
                                        <ComboBoxItem Content="Aquatic"/>
                                        <ComboBoxItem Content="Mountain"/>
                                        <ComboBoxItem Content="Grassland"/>
                                        <ComboBoxItem Content="Arctic"/>
                                    </ComboBox>
                                    <TextBlock x:Name="HabitatErrorTextBlock" Foreground="#C62828" FontSize="10" 
                                               Margin="0,2,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                                </StackPanel>

                                <!-- érkezés dátuma -->
                                <StackPanel Grid.Row="1" Margin="0,0,12,0">
                                    <TextBlock Text="Arrival Date" Style="{StaticResource LabelText}"/>
                                    <DatePicker x:Name="ArrivalDatePicker"/>
                                    <TextBlock x:Name="ArrivalDateErrorTextBlock" Foreground="#C62828" FontSize="10" 
                                               Margin="0,2,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                                </StackPanel>

                                <!-- egészségügyi állapot -->
                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="6,0,6,0">
                                    <TextBlock Text="Health Status" Style="{StaticResource LabelText}"/>
                                    <ComboBox x:Name="HealthStatusComboBox">
                                        <ComboBoxItem Content="Excellent" IsSelected="True"/>
                                        <ComboBoxItem Content="Good"/>
                                        <ComboBoxItem Content="Fair"/>
                                        <ComboBoxItem Content="Poor"/>
                                    </ComboBox>
                                    <TextBlock x:Name="HealthStatusErrorTextBlock" Foreground="#C62828" FontSize="10" 
                                               Margin="0,2,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>
                                </StackPanel>

                                <!-- etetési státusz -->
                                <StackPanel Grid.Row="1" Grid.Column="2" Margin="12,0,0,0">
                                    <TextBlock Text="Feeding Status" Style="{StaticResource LabelText}"/>
                                    <CheckBox x:Name="IsFedCheckBox" Content="Is Fed" Margin="0,10,0,0" IsChecked="True"/>
                                </StackPanel>
                            </Grid>

                            <!-- hozzáadás gomb -->
                            <Button x:Name="AddAnimalButton" Content="Add Animal" Height="44" Width="160" 
                                    HorizontalAlignment="Left" Background="#558B2F" Foreground="White" 
                                    BorderBrush="Transparent" Style="{StaticResource ModernButton}" 
                                    Click="AddAnimalButton_Click" FontSize="14"/>
                        </StackPanel>
                    </Border>
                </Expander>

                <!-- keresés és módosítás szekció -->
                <Expander Header="Search and Modify Animals" FontSize="17" FontWeight="Bold" Margin="0,0,0,24"
                          HeaderTemplate="{StaticResource ExpanderHeader}" IsExpanded="True">
                    <Border Style="{StaticResource ContentBorder}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*" MinWidth="350"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="*" MinWidth="320"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- bal oldal: keresés -->
                            <StackPanel>
                                <Border Background="#6B7C4A" CornerRadius="8" Padding="10,6" Margin="0,0,0,12">
                                    <TextBlock Text="Search Criteria" Style="{StaticResource SectionTitle}" 
                                               FontSize="14" Margin="0" Foreground="White"/>
                                </Border>
                                
                                <!-- keresési opciók, elég sok van -->
                                <Grid Margin="0,0,0,16">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <RadioButton x:Name="SearchByIdRadio" Content="ID" GroupName="SearchType" FontSize="12"
                                                     Margin="0,0,20,0" IsChecked="True" Checked="SearchRadio_Checked"/>
                                        <RadioButton x:Name="SearchBySpeciesRadio" Content="Species" GroupName="SearchType" FontSize="12"
                                                     Margin="0,0,20,0" Checked="SearchRadio_Checked"/>
                                        <RadioButton x:Name="SearchByHabitatRadio" Content="Habitat" GroupName="SearchType" FontSize="12"
                                                     Checked="SearchRadio_Checked"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                                        <RadioButton x:Name="SearchByHealthRadio" Content="Health Status" GroupName="SearchType" FontSize="12"
                                                     Margin="0,0,20,0" Checked="SearchRadio_Checked"/>
                                        <RadioButton x:Name="SearchByFedRadio" Content="Fed Status" GroupName="SearchType" FontSize="12"
                                                     Checked="SearchRadio_Checked"/>
                                    </StackPanel>
                                </Grid>
                                
                                <!-- keresési mezők (ezek váltakoznak a radio buttonok alapján) -->
                                <TextBox x:Name="SearchTextBox" Margin="0,0,0,16" Height="32" FontSize="12" TextChanged="SearchTextBox_TextChanged"/>
                                <ComboBox x:Name="SearchComboBox" Visibility="Collapsed" Margin="0,0,0,16" Height="32" FontSize="12"
                                          SelectionChanged="SearchComboBox_SelectionChanged"/>
                                <CheckBox x:Name="SearchFedCheckBox" Content="Show only fed animals" FontSize="12"
                                          Visibility="Collapsed" Margin="0,0,0,16" 
                                          Checked="SearchFedCheckBox_Changed" Unchecked="SearchFedCheckBox_Changed"/>
                                
                                <!-- rendezési opciók -->
                                <Grid Margin="0,0,0,12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="Sort by:" Style="{StaticResource LabelText}" FontSize="12"
                                               VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <ComboBox x:Name="SortComboBox" Grid.Column="1" Margin="0,0,8,0" Height="32" FontSize="12"
                                              SelectionChanged="SortComboBox_SelectionChanged">
                                        <ComboBoxItem Content="ID" IsSelected="True"/>
                                        <ComboBoxItem Content="Species"/>
                                        <ComboBoxItem Content="Habitat"/>
                                        <ComboBoxItem Content="Arrival Date"/>
                                    </ComboBox>
                                    <!-- rendezési sorrend gomb (fel/le) -->
                                    <Button x:Name="SortOrderButton" Grid.Column="2" Content="⬆" Width="48" Height="32" FontSize="18"
                                            Padding="8,2" Background="#5A6B42" Foreground="White" BorderBrush="Transparent" 
                                            Style="{StaticResource ModernButton}" Click="SortOrderButton_Click" 
                                            ToolTip="Toggle sort order"/>
                                </Grid>
                                
                                <!-- keresési eredmények listája -->
                                <Grid Margin="0,8,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Background="#6B7C4A" CornerRadius="8" Padding="10,6">
                                        <TextBlock Text="Search Results" Style="{StaticResource SectionTitle}" 
                                                   FontSize="14" Margin="0" VerticalAlignment="Center" Foreground="White"/>
                                    </Border>
                                    <!-- export gomb -->
                                    <Button x:Name="ExportButton" Grid.Column="1" Content="Export" 
                                            Height="32" Padding="16,5" FontSize="12"
                                            Background="#EF6C00" Foreground="White" BorderBrush="Transparent" 
                                            Style="{StaticResource ModernButton}" Click="ExportButton_Click"
                                            ToolTip="Export current search results to JSON"/>
                                </Grid>
                                <!-- az állatok listája, itt jelennek meg a találatok -->
                                <ListBox x:Name="SearchResultsListBox" MinHeight="250" MaxHeight="400"
                                         ItemTemplate="{StaticResource AnimalListTemplate}" 
                                         SelectionChanged="SearchResultsListBox_SelectionChanged" 
                                         BorderBrush="#8B9B6B" BorderThickness="2" Background="#FAFDF7"
                                         HorizontalContentAlignment="Stretch"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                            </StackPanel>
                            
                            <!-- elválasztó vonal -->
                            <Border Grid.Column="1" Background="#8B9B6B" Width="2" Margin="0,8" CornerRadius="1"/>
                            
                            <!-- jobb oldal: módosítás/törlés -->
                            <StackPanel Grid.Column="2">
                                <Border Background="#6B7C4A" CornerRadius="8" Padding="10,6" Margin="0,0,0,8">
                                    <TextBlock Text="Modify / Delete Animal" Style="{StaticResource SectionTitle}" 
                                               FontSize="14" Margin="0" Foreground="White"/>
                                </Border>
                                <TextBlock Text="Select an animal from search results to modify or delete." 
                                           FontStyle="Italic" Foreground="#5A6B42" FontSize="10" Margin="0,0,0,12" TextWrapping="Wrap"/>
                                
                                <!-- módosítási űrlap (alapból ki van kapcsolva) -->
                                <Grid x:Name="ModifyGrid" IsEnabled="False">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <!-- ID csak olvasható, mert azt nem szabad módosítani -->
                                    <StackPanel Margin="0,0,0,8">
                                        <TextBlock Text="ID (Read-only)" Style="{StaticResource LabelText}" FontSize="12"/>
                                        <TextBox x:Name="ModifyIdTextBox" IsReadOnly="True" Background="#F0F4E8" Height="30" FontSize="12" Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Margin="0,0,0,8">
                                        <TextBlock Text="Name (Species)" Style="{StaticResource LabelText}" FontSize="12"/>
                                        <TextBox x:Name="ModifyNameTextBox" Height="30" FontSize="12" Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="2" Margin="0,0,0,8">
                                        <TextBlock Text="Habitat" Style="{StaticResource LabelText}" FontSize="12"/>
                                        <ComboBox x:Name="ModifyHabitatComboBox" Height="30" FontSize="12" Margin="0,4,0,0">
                                            <ComboBoxItem Content="Savannah"/>
                                            <ComboBoxItem Content="Rainforest"/>
                                            <ComboBoxItem Content="Desert"/>
                                            <ComboBoxItem Content="Aquatic"/>
                                            <ComboBoxItem Content="Mountain"/>
                                            <ComboBoxItem Content="Grassland"/>
                                            <ComboBoxItem Content="Arctic"/>
                                        </ComboBox>
                                    </StackPanel>

                                    <StackPanel Grid.Row="3" Margin="0,0,0,8">
                                        <TextBlock Text="Arrival Date" Style="{StaticResource LabelText}" FontSize="12"/>
                                        <DatePicker x:Name="ModifyArrivalDatePicker" Height="32" FontSize="12" Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="4" Margin="0,0,0,8">
                                        <TextBlock Text="Health Status" Style="{StaticResource LabelText}" FontSize="12"/>
                                        <ComboBox x:Name="ModifyHealthStatusComboBox" Height="30" FontSize="12" Margin="0,4,0,0">
                                            <ComboBoxItem Content="Excellent"/>
                                            <ComboBoxItem Content="Good"/>
                                            <ComboBoxItem Content="Fair"/>
                                            <ComboBoxItem Content="Poor"/>
                                        </ComboBox>
                                    </StackPanel>

                                    <StackPanel Grid.Row="5" Margin="0,0,0,12">
                                        <TextBlock Text="Feeding Status" Style="{StaticResource LabelText}" FontSize="12"/>
                                        <CheckBox x:Name="ModifyIsFedCheckBox" Content="Is Fed" FontSize="12" Margin="0,6,0,0" Height="26"/>
                                    </StackPanel>
                                </Grid>

                                <!-- mentés és törlés gombok -->
                                <Button x:Name="ModifyButton" Content="Save Changes" Height="38" FontSize="13"
                                        Background="#1976D2" Foreground="White" BorderBrush="Transparent" 
                                        Style="{StaticResource ModernButton}" Click="ModifyButton_Click" 
                                        Margin="0,0,0,8" IsEnabled="False"/>
                                <Button x:Name="DeleteButton" Content="Delete Animal" Height="38" FontSize="13"
                                        Background="#C62828" Foreground="White" BorderBrush="Transparent" 
                                        Style="{StaticResource ModernButton}" Click="DeleteButton_Click" 
                                        IsEnabled="False"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Expander>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
