<Window x:Class="Zoo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zoo"
        mc:Ignorable="d"
        Title="Zoo Manager" Height="800" Width="1100" MinHeight="650" MinWidth="900"
        FontFamily="Segoe UI">
    <Window.Resources>
        <DataTemplate x:Key="AnimalListTemplate">
            <Border BorderBrush="#E0E0E0" BorderThickness="1" Padding="16" Margin="4" 
                    Background="White" CornerRadius="12">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="8" ShadowDepth="2"/>
                </Border.Effect>
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ID: " FontWeight="Bold" Foreground="#2E7D32"/>
                        <TextBlock Text="{Binding id}" Margin="0,0,20,0" FontWeight="SemiBold"/>
                        <TextBlock Text="Species: " FontWeight="Bold" Foreground="#2E7D32"/>
                        <TextBlock Text="{Binding species}" Margin="0,0,20,0" FontWeight="SemiBold"/>
                        <TextBlock Text="Habitat: " FontWeight="Bold" Foreground="#2E7D32"/>
                        <TextBlock Text="{Binding habitat}" Margin="0,0,20,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <TextBlock Text="Arrival: " FontWeight="Bold" Foreground="#2E7D32"/>
                        <TextBlock Text="{Binding arrival_date}" Margin="0,0,20,0"/>
                        <TextBlock Text="Health: " FontWeight="Bold" Foreground="#2E7D32"/>
                        <TextBlock Text="{Binding health_status}" Margin="0,0,20,0"/>
                        <TextBlock Text="Fed: " FontWeight="Bold" Foreground="#2E7D32"/>
                        <TextBlock Text="{Binding is_fed}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </DataTemplate>
        
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.15" BlurRadius="6" ShadowDepth="2"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#424242"/>
        </Style>
        
        <Style x:Key="ContentBorder" TargetType="Border">
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,12,0,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.08" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="#2E7D32"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
        
        <Style x:Key="ErrorBorder" TargetType="Border">
            <Setter Property="BorderBrush" Value="Red"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        
        <DataTemplate x:Key="ExpanderHeader">
            <TextBlock Text="{Binding}" Foreground="#2E7D32" FontSize="17" FontWeight="Bold"/>
        </DataTemplate>
        
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <Style TargetType="DatePicker">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
        </Style>
        
        <Style TargetType="CheckBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
        
        <Style TargetType="RadioButton">
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
    </Window.Resources>
    
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Height="70" Background="#2E7D32">
            <Grid.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.2" BlurRadius="10" ShadowDepth="3"/>
            </Grid.Effect>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="🐾" FontSize="36" VerticalAlignment="Center" Margin="20,0,0,0"/>
            <TextBlock Grid.Column="1" Text="Zoo Manager" FontSize="32" FontWeight="Bold" 
                       Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock x:Name="ClockTextBlock" Grid.Column="2" FontSize="18" FontWeight="SemiBold" 
                       Foreground="White" VerticalAlignment="Center" Margin="0,0,20,0"/>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="30,20">
            <StackPanel Margin="0,10,0,20">
                
                <Expander Header="➕ Add New Animal" FontSize="17" FontWeight="Bold" Margin="0,0,0,24"
                          HeaderTemplate="{StaticResource ExpanderHeader}">
                    <Border Style="{StaticResource ContentBorder}">
                        <StackPanel>
                            <TextBlock x:Name="ValidationMessageTextBlock" Foreground="Red" FontWeight="SemiBold" 
                                       Margin="0,0,0,12" Visibility="Collapsed"/>
                            
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" MinWidth="160"/>
                                    <ColumnDefinition Width="*" MinWidth="160"/>
                                    <ColumnDefinition Width="*" MinWidth="160"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Margin="0,0,12,16">
                                    <TextBlock Text="ID" Style="{StaticResource LabelText}"/>
                                    <Border x:Name="IdBorder">
                                        <TextBox x:Name="IdTextBox"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="6,0,6,16">
                                    <TextBlock Text="Name (Species)" Style="{StaticResource LabelText}"/>
                                    <Border x:Name="NameBorder">
                                        <TextBox x:Name="NameTextBox"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Margin="12,0,0,16">
                                    <TextBlock Text="Habitat" Style="{StaticResource LabelText}"/>
                                    <Border x:Name="HabitatBorder">
                                        <ComboBox x:Name="HabitatComboBox">
                                            <ComboBoxItem Content="Savannah"/>
                                            <ComboBoxItem Content="Rainforest"/>
                                            <ComboBoxItem Content="Desert"/>
                                            <ComboBoxItem Content="Aquatic"/>
                                            <ComboBoxItem Content="Mountain"/>
                                            <ComboBoxItem Content="Grassland"/>
                                            <ComboBoxItem Content="Arctic"/>
                                        </ComboBox>
                                    </Border>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Margin="0,0,12,0">
                                    <TextBlock Text="Arrival Date" Style="{StaticResource LabelText}"/>
                                    <Border x:Name="ArrivalDateBorder">
                                        <DatePicker x:Name="ArrivalDatePicker"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="1" Margin="6,0,6,0">
                                    <TextBlock Text="Health Status" Style="{StaticResource LabelText}"/>
                                    <Border x:Name="HealthStatusBorder">
                                        <ComboBox x:Name="HealthStatusComboBox">
                                            <ComboBoxItem Content="Excellent" IsSelected="True"/>
                                            <ComboBoxItem Content="Good"/>
                                            <ComboBoxItem Content="Fair"/>
                                            <ComboBoxItem Content="Poor"/>
                                        </ComboBox>
                                    </Border>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="2" Margin="12,0,0,0">
                                    <TextBlock Text="Feeding Status" Style="{StaticResource LabelText}"/>
                                    <CheckBox x:Name="IsFedCheckBox" Content="Is Fed" Margin="0,10,0,0" IsChecked="True"/>
                                </StackPanel>
                            </Grid>

                            <Button x:Name="AddAnimalButton" Content="Add Animal" Height="40" Width="160" 
                                    HorizontalAlignment="Left" Background="#4CAF50" Foreground="White" 
                                    BorderBrush="Transparent" Style="{StaticResource ModernButton}" 
                                    Click="AddAnimalButton_Click"/>
                        </StackPanel>
                    </Border>
                </Expander>

                <Expander Header="🔍 Search and Modify Animals" FontSize="17" FontWeight="Bold" Margin="0,0,0,24"
                          HeaderTemplate="{StaticResource ExpanderHeader}">
                    <Border Style="{StaticResource ContentBorder}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="380"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel>
                                <TextBlock Text="Search Criteria" Style="{StaticResource SectionTitle}" FontSize="14"/>
                                
                                <Grid Margin="0,0,0,16">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <RadioButton x:Name="SearchByIdRadio" Content="ID" GroupName="SearchType" FontSize="12"
                                                     Margin="0,0,20,0" IsChecked="True" Checked="SearchRadio_Checked"/>
                                        <RadioButton x:Name="SearchBySpeciesRadio" Content="Species" GroupName="SearchType" FontSize="12"
                                                     Margin="0,0,20,0" Checked="SearchRadio_Checked"/>
                                        <RadioButton x:Name="SearchByHabitatRadio" Content="Habitat" GroupName="SearchType" FontSize="12"
                                                     Checked="SearchRadio_Checked"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                                        <RadioButton x:Name="SearchByHealthRadio" Content="Health Status" GroupName="SearchType" FontSize="12"
                                                     Margin="0,0,20,0" Checked="SearchRadio_Checked"/>
                                        <RadioButton x:Name="SearchByFedRadio" Content="Fed Status" GroupName="SearchType" FontSize="12"
                                                     Checked="SearchRadio_Checked"/>
                                    </StackPanel>
                                </Grid>
                                
                                <TextBox x:Name="SearchTextBox" Margin="0,0,0,16" Height="30" FontSize="12" TextChanged="SearchTextBox_TextChanged"/>
                                <ComboBox x:Name="SearchComboBox" Visibility="Collapsed" Margin="0,0,0,16" Height="30" FontSize="12"
                                          SelectionChanged="SearchComboBox_SelectionChanged"/>
                                <CheckBox x:Name="SearchFedCheckBox" Content="Show only fed animals" FontSize="12"
                                          Visibility="Collapsed" Margin="0,0,0,16" 
                                          Checked="SearchFedCheckBox_Changed" Unchecked="SearchFedCheckBox_Changed"/>
                                
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="Sort by:" Style="{StaticResource LabelText}" FontSize="12"
                                               VerticalAlignment="Center" Margin="0,0,12,0"/>
                                    <ComboBox x:Name="SortComboBox" Grid.Column="1" Margin="0,0,8,0" Height="30" FontSize="12"
                                              SelectionChanged="SortComboBox_SelectionChanged">
                                        <ComboBoxItem Content="ID" IsSelected="True"/>
                                        <ComboBoxItem Content="Species"/>
                                        <ComboBoxItem Content="Habitat"/>
                                        <ComboBoxItem Content="Arrival Date"/>
                                    </ComboBox>
                                    <Button x:Name="SortOrderButton" Grid.Column="2" Content="⬆" Width="45" Height="30" FontSize="18"
                                            Padding="8,2" Background="#607D8B" Foreground="White" BorderBrush="Transparent" 
                                            Style="{StaticResource ModernButton}" Click="SortOrderButton_Click" 
                                            ToolTip="Toggle sort order"/>
                                </Grid>
                                
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Search Results" Style="{StaticResource SectionTitle}" FontSize="14" Margin="0" VerticalAlignment="Center"/>
                                    <Button x:Name="ExportButton" Grid.Column="1" Content="📥 Export" 
                                            Height="30" Padding="14,5" FontSize="12"
                                            Background="#FF9800" Foreground="White" BorderBrush="Transparent" 
                                            Style="{StaticResource ModernButton}" Click="ExportButton_Click"
                                            ToolTip="Export current search results to JSON"/>
                                </Grid>
                                <ListBox x:Name="SearchResultsListBox" Height="320" 
                                         ItemTemplate="{StaticResource AnimalListTemplate}" 
                                         SelectionChanged="SearchResultsListBox_SelectionChanged" 
                                         BorderBrush="#E0E0E0" BorderThickness="1"/>
                            </StackPanel>
                            
                            <Border Grid.Column="1" Background="#E0E0E0" Width="1" Margin="0,8"/>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Modify/Delete Animal" Style="{StaticResource SectionTitle}" FontSize="14" Margin="0,0,0,8"/>
                                <TextBlock Text="Select an animal from search results to modify or delete." 
                                           FontStyle="Italic" Foreground="#757575" FontSize="10" Margin="0,0,0,12" TextWrapping="Wrap"/>
                                
                                <Grid x:Name="ModifyGrid" IsEnabled="False">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Margin="0,0,0,8">
                                        <TextBlock Text="ID (Read-only)" Style="{StaticResource LabelText}" FontSize="12"/>
                                        <TextBox x:Name="ModifyIdTextBox" IsReadOnly="True" Background="#F5F5F5" Height="30" FontSize="12" Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Margin="0,0,0,8">
                                        <TextBlock Text="Name (Species)" Style="{StaticResource LabelText}" FontSize="12"/>
                                        <TextBox x:Name="ModifyNameTextBox" Height="30" FontSize="12" Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="2" Margin="0,0,0,8">
                                        <TextBlock Text="Habitat" Style="{StaticResource LabelText}" FontSize="12"/>
                                        <ComboBox x:Name="ModifyHabitatComboBox" Height="30" FontSize="12" Margin="0,4,0,0">
                                            <ComboBoxItem Content="Savannah"/>
                                            <ComboBoxItem Content="Rainforest"/>
                                            <ComboBoxItem Content="Desert"/>
                                            <ComboBoxItem Content="Aquatic"/>
                                            <ComboBoxItem Content="Mountain"/>
                                            <ComboBoxItem Content="Grassland"/>
                                            <ComboBoxItem Content="Arctic"/>
                                        </ComboBox>
                                    </StackPanel>

                                    <StackPanel Grid.Row="3" Margin="0,0,0,8">
                                        <TextBlock Text="Arrival Date" Style="{StaticResource LabelText}" FontSize="12"/>
                                        <DatePicker x:Name="ModifyArrivalDatePicker" Height="30" FontSize="11" Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="4" Margin="0,0,0,8">
                                        <TextBlock Text="Health Status" Style="{StaticResource LabelText}" FontSize="12"/>
                                        <ComboBox x:Name="ModifyHealthStatusComboBox" Height="30" FontSize="12" Margin="0,4,0,0">
                                            <ComboBoxItem Content="Excellent"/>
                                            <ComboBoxItem Content="Good"/>
                                            <ComboBoxItem Content="Fair"/>
                                            <ComboBoxItem Content="Poor"/>
                                        </ComboBox>
                                    </StackPanel>

                                    <StackPanel Grid.Row="5" Margin="0,0,0,12">
                                        <TextBlock Text="Feeding Status" Style="{StaticResource LabelText}" FontSize="12"/>
                                        <CheckBox x:Name="ModifyIsFedCheckBox" Content="Is Fed" FontSize="12" Margin="0,6,0,0" Height="26"/>
                                    </StackPanel>
                                </Grid>

                                <Button x:Name="ModifyButton" Content="💾 Save Changes" Height="36" FontSize="13"
                                        Background="#2196F3" Foreground="White" BorderBrush="Transparent" 
                                        Style="{StaticResource ModernButton}" Click="ModifyButton_Click" 
                                        Margin="0,0,0,8" IsEnabled="False"/>
                                <Button x:Name="DeleteButton" Content="🗑️ Delete Animal" Height="36" FontSize="13"
                                        Background="#F44336" Foreground="White" BorderBrush="Transparent" 
                                        Style="{StaticResource ModernButton}" Click="DeleteButton_Click" 
                                        IsEnabled="False"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Expander>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
