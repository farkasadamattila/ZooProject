<Window x:Class="Zoo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zoo"
        mc:Ignorable="d"
        Title="Zoo Manager" Height="500" Width="800" MinHeight="400" MinWidth="600">
    <Window.Resources>
        <DataTemplate x:Key="AnimalListTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ID: " FontWeight="Bold"/>
                <TextBlock Text="{Binding id}" Margin="0,0,10,0"/>
                <TextBlock Text="Species: " FontWeight="Bold"/>
                <TextBlock Text="{Binding species}" Margin="0,0,10,0"/>
                <TextBlock Text="Habitat: " FontWeight="Bold"/>
                <TextBlock Text="{Binding habitat}" Margin="0,0,10,0"/>
                <TextBlock Text="Arrival: " FontWeight="Bold"/>
                <TextBlock Text="{Binding arrival_date}"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid Background="#FF8EB897" Margin="0,0,0,-82">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header: logo left, title center, clock right -->
        <Grid Grid.Row="0" Margin="0,0,0,509" Background="#FF5B7553" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Logo (simple emoji/text logo for now) -->

            <Viewbox Grid.Column="0" Height="40" Width="40" VerticalAlignment="Center"/>

            <!-- Title -->
            <TextBlock Grid.Column="1" Text="Zoo Manager" FontSize="28" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FF5B7553"/>

            <!-- Clock -->
            <TextBlock x:Name="ClockTextBlock" Grid.Column="2" FontSize="16" FontWeight="SemiBold" Foreground="#333" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            <TextBlock Text="🐾" FontSize="28" Background="#FF5B7553" Grid.Column="1" Margin="0,11,720,4" />
        </Grid>

        <!-- Main Content -->
        <Border Grid.Row="1" Margin="20,76,20,26" Padding="20" Background="#FFC3E8BD" CornerRadius="12" BorderBrush="#DDD" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Add New Animal" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,16" Foreground="#444"/>

                <!-- Responsive form: grid with two columns that will stretch -->
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,12,12">
                        <TextBlock Text="ID" FontWeight="Bold"/>
                        <TextBox x:Name="IdTextBox" Height="28" Margin="0,4,0,0">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10" />
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </StackPanel>

                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,12">
                        <TextBlock Text="Name (Species)" FontWeight="Bold"/>
                        <TextBox x:Name="NameTextBox" Height="28" Margin="0,4,0,0">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10" />
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,12,0">
                        <TextBlock Text="Habitat" FontWeight="Bold"/>
                        <ComboBox x:Name="HabitatComboBox" Height="28" Margin="0,4,0,0">
                            <ComboBox.Background>
                                <LinearGradientBrush EndPoint="0,1">
                                    <GradientStop Color="#FFF0F0F0"/>
                                    <GradientStop Color="Red" Offset="1"/>
                                </LinearGradientBrush>
                            </ComboBox.Background>
                            <ComboBoxItem Content="Savannah"/>
                            <ComboBoxItem Content="Rainforest"/>
                            <ComboBoxItem Content="Desert"/>
                            <ComboBoxItem Content="Aquatic"/>
                            <ComboBoxItem Content="Mountain"/>
                            <ComboBoxItem Content="Grassland"/>
                            <ComboBoxItem Content="Arctic"/>
                            <!--<ComboBox.Template>
                                <ControlTemplate TargetType="ComboBox">
                                    <Border CornerRadius="10" />
                                </ControlTemplate>
                            </ComboBox.Template>-->
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="1">
                        <TextBlock Text="Arrival Date" FontWeight="Bold"/>
                        <DatePicker x:Name="ArrivalDatePicker" Height="28" Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>

                <Button x:Name="AddAnimalButton" Content="Add Animal" Height="32" Width="140" HorizontalAlignment="Left" Background="#4CAF50" Foreground="White" BorderBrush="#388E3C" FontWeight="Bold" Click="AddAnimalButton_Click"/>
                <Separator Margin="0,20,0,20"/>
                <ContentControl x:Name="DataDisplay" Margin="0,20,0,0"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
