<Window x:Class="Zoo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zoo"
        mc:Ignorable="d"
        Title="Zoo Manager" Height="500" Width="800" MinHeight="400" MinWidth="600">
    <Window.Resources>
        <DataTemplate x:Key="AnimalListTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ID: " FontWeight="Bold"/>
                <TextBlock Text="{Binding id}" Margin="0,0,10,0"/>
                <TextBlock Text="Species: " FontWeight="Bold"/>
                <TextBlock Text="{Binding species}" Margin="0,0,10,0"/>
                <TextBlock Text="Habitat: " FontWeight="Bold"/>
                <TextBlock Text="{Binding habitat}" Margin="0,0,10,0"/>
                <TextBlock Text="Arrival: " FontWeight="Bold"/>
                <TextBlock Text="{Binding arrival_date}"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid Background="#F7F7F7">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Margin="20,10,20,10">
            <TextBlock Text="Zoo Manager" FontSize="28" FontWeight="Bold" Foreground="#333" DockPanel.Dock="Left" VerticalAlignment="Center"/>
            <Button Content="🌐 Language" Width="120" Height="32" DockPanel.Dock="Right" VerticalAlignment="Center" Background="#E0E0E0" Foreground="#333" BorderBrush="#CCC"/>
        </DockPanel>

        <!-- Main Content -->
        <Border Grid.Row="1" Margin="20" Padding="20" Background="White" CornerRadius="12" BorderBrush="#DDD" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Add New Animal" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,16" Foreground="#444"/>
                <UniformGrid Columns="2" Rows="2" Margin="0,0,0,12" HorizontalAlignment="Stretch">
                    <StackPanel Margin="0,0,12,0">
                        <TextBlock Text="ID" FontWeight="Bold"/>
                        <TextBox x:Name="IdTextBox" Height="28" Margin="0,4,0,0"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Name (Species)" FontWeight="Bold"/>
                        <TextBox x:Name="NameTextBox" Height="28" Margin="0,4,0,0"/>
                    </StackPanel>
                    <StackPanel Margin="0,0,12,0">
                        <TextBlock Text="Habitat" FontWeight="Bold"/>
                        <ComboBox x:Name="HabitatComboBox" Height="28" Margin="0,4,0,0">
                            <ComboBoxItem Content="Savannah"/>
                            <ComboBoxItem Content="Rainforest"/>
                            <ComboBoxItem Content="Desert"/>
                            <ComboBoxItem Content="Aquatic"/>
                            <ComboBoxItem Content="Mountain"/>
                            <ComboBoxItem Content="Grassland"/>
                            <ComboBoxItem Content="Arctic"/>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Arrival Date" FontWeight="Bold"/>
                        <DatePicker x:Name="ArrivalDatePicker" Height="28" Margin="0,4,0,0"/>
                    </StackPanel>
                </UniformGrid>
                <Button x:Name="AddAnimalButton" Content="Add Animal" Height="32" Width="140" HorizontalAlignment="Left" Background="#4CAF50" Foreground="White" BorderBrush="#388E3C" FontWeight="Bold" Click="AddAnimalButton_Click"/>
                <Separator Margin="0,20,0,20"/>
                <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button x:Name="ShowListButton" Content="Show List" Width="100" Height="32" Background="#2196F3" Foreground="White" BorderBrush="#1976D2" FontWeight="Bold" Click="ShowListButton_Click" Margin="0,0,10,0"/>
                    <Button x:Name="ShowLabelsButton" Content="Show Labels" Width="100" Height="32" Background="#FF9800" Foreground="White" BorderBrush="#F57C00" FontWeight="Bold" Click="ShowLabelsButton_Click"/>
                </StackPanel>-->
                <ContentControl x:Name="DataDisplay" Margin="0,20,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
